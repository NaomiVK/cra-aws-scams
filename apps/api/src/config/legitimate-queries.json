{
  "version": "1.0.0",
  "description": "Exemplar legitimate CRA queries for semantic zone classification. These patterns are used to compute embedding centroids for automatic legitimate query detection.",
  "settings": {
    "legitimateThreshold": 0.80,
    "model": "text-embedding-3-large",
    "cacheHours": 24
  },
  "categories": {
    "accountAccess": {
      "description": "Login, authentication, and account management queries",
      "exemplars": [
        "cra login",
        "cra sign in",
        "cra my account",
        "my cra account",
        "cra phone number",
        "cra contact",
        "cra hours",
        "cra office"
      ]
    },
    "generalInquiry": {
      "description": "General how-to questions, eligibility checks, and informational queries",
      "exemplars": [
        "how to apply",
        "how do i apply",
        "eligibility",
        "am i eligible",
        "calculator",
        "payment dates",
        "payment schedule",
        "when is",
        "cra address",
        "cra mailing address"
      ]
    },
    "taxFiling": {

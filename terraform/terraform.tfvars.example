# Example terraform variables file
# Copy this to terraform.tfvars and fill in your values
# NEVER commit terraform.tfvars to git!

aws_region    = "us-east-2"
environment   = "prod"
instance_type = "t2.small"

# Your EC2 key pair name (must already exist in AWS)
key_pair_name = "your-key-pair-name"

# Restrict SSH to your IP (get yours from https://whatismyip.com)
allowed_ssh_cidr = "YOUR.IP.ADDRESS.HERE/32"

# Application ports
app_port      = 3000
frontend_port = 4200

# Secrets (optional - can also set in AWS console)
# google_maps_api_key  = "your-google-maps-api-key"
# openai_api_key       = "your-openai-api-key"
# gsc_service_account  = "{\"type\":\"service_account\",...}"
